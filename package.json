{
  "name": "diesal",
  "version": "0.3.2",
  "description": "Data structures and algorithms in ES2015 modules",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm run compile",
    "compile": "babel -d lib/ src/",
    "update-docs": "documentation build --document-exported src/** -o docs -f html",
    "test-single-run": "mocha --require babel-register --recursive",
    "test-watch": "npm run test-single-run -- -w",
    "coverage": "cross-env NODE_ENV=test nyc npm run test-single-run",
    "lint": "eslint src && documentation lint src/**",
    "test": "npm run lint && npm run coverage"
  },
  "keywords": [
    "data structures",
    "algorithms",
    "ecmascript",
    "modules"
  ],
  "author": "Jonathan Skeate",
  "license": "ISC",
  "repository": "http://github.com/skeate/diesal",
  "devDependencies": {
    "babel": "^6.1.18",
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-es2015": "^6.1.18",
    "chai": "^4.0.0",
    "babel-register": "^6.23.0",
    "codeclimate-test-reporter": "^0.4.0",
    "cross-env": "^3.1.4",
    "documentation": "^4.0.0-beta.18",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "rules": {
      "no-mixed-operators": "off",
      "no-underscore-dangle": "off",
      "no-plusplus": "off",
      "no-unused-vars": [
        "warn",
        {
          "vars": "local",
          "args": "none"
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
